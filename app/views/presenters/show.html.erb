<section class="container__video__show p-8">
  <h1 class="text-4xl underline underline-offset-4 pb-4"><%= @presenter.name%></h1>
  <ul class="leading-8">
    <li>
      <span>Twitter Handle: </span>
      <span class="bg-sky-500 rounded p-1 text-white">
        <%= '@' + @presenter.twitter_handle %>
      </span>
    </li>
    <li>
      <span>LinkedIn Handle: </span>
      <span class="bg-sky-500 rounded p-1 text-white">
        <%= @presenter.linked_in%>
      </span>
    </li>
    <li>
      <span>Role: </span>
      <span class="bg-sky-500 rounded p-1 text-white">
        <%= @presenter.role%>
      </span>
    </li>
  </ul>

  <%= link_to "Edit Presenter", edit_presenter_path(@presenter), class: 'underline text-sky-500 underline-offset-4 text-2xl mt-4' %>
</section>